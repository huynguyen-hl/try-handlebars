          flex: 1;
          flex-grow: 1;
        }

        .container .text-wrapper-6 {
          align-self: stretch;
          margin-top: -1px;
          font-weight: 900;
          color: var(--primary-colorsblue-700);
          font-size: 56px;
          text-align: center;
          letter-spacing: 3.36px;
          line-height: 60.7px;
        }

        .container .text-wrapper-7 {
          width: fit-content;
          font-weight: 700;
          color: var(--primary-colorsblue-700);
          font-size: 16px;
          letter-spacing: 0;
          line-height: 18.9px;
        }

        .container .rectangle {
          position: relative;
          width: 1px;
          height: 112px;
          background-color: var(--primary-colorsgray-400);
          transform: rotate(180deg);
        }

        .container .rectangle-2 {
          width: 508px;
          position: relative;
          height: 1px;
          background-color: var(--primary-colorsgray-400);
        }

        .container .frame-8 {
          display: flex;
          flex-direction: column;
          min-width: 170px;
          align-items: center;
          gap: 8px;
          padding: 12px 16px;
          position: relative;
          flex: 1;
          flex-grow: 1;
          background-color: var(--primary-colorsblue-10);
        }

        .container .text-wrapper-8 {
          align-self: stretch;
          font-weight: 400;
          color: var(--primary-colorsgray-600);
          font-size: 14px;
          letter-spacing: 0;
          line-height: 15.3px;
        }

        .container .frame-9 {
          display: flex;
          flex-direction: column;
          align-items: flex-start;
          gap: 12px;
          position: relative;
          flex: 1;
          flex-grow: 1;
        }

        .container .cards-traceability {
          display: flex;
          align-items: center;
          justify-content: space-between;
          padding: 8px 0px;
          position: relative;
          align-self: stretch;
          width: 100%;
          flex: 0 0 auto;
          background-color: var(--white);
          border-radius: 4px;
        }

        .container .div-4 {
          display: inline-flex;
          align-items: center;
          gap: 12px;
          position: relative;
          flex: 0 0 auto;
        }

        .container .frame-10 {
          display: flex;
          flex-direction: column;
          width: 260px;
          align-items: flex-start;
          gap: 4px;
          position: relative;
        }

        .container .text-wrapper-9 {
          position: relative;
          align-self: stretch;
          margin-top: -1px;
          font-weight: 600;
          color: var(--black);
          font-size: 16px;
          letter-spacing: 0;
          line-height: 17.4px;
        }

        .container .frame-11 {
          display: inline-flex;
          flex-direction: column;
